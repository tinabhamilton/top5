<h1>Top 5 Songs</h1>

<div class="row">
<% @songs.each do |song| %>
	<div class "col-md-12">
		<div class="well">
			<h1><%= link_to song.name, song%></h1>
			<h4><%= link_to song.artist.name, song.artist %></h4>
			<h4><% song.rating.times do %></h4>
     		<i class="glyphicon glyphicon-star"></i>
     		<% end %>
		</div>
	</div>
<% end %>
</div>

